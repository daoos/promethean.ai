{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Task",
    "definitions": {
        "Task": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "duration": {
                    "type": "integer"
                },
                "requirements": {
                    "type": "array",
                    "items": {
                        "$ref": "../Condition_schema.json#/Condition"
                    }
                },
                "resource_impacts": {
                    "type": "array",
                    "items": {
                        "$ref": "../Resource_schema.json#/Resource"
                    }
                },
                "property_impacts": {
                    "type": "array",
                    "items": {
                        "$ref": "../Property_schema.json#/Property"
                    }
                }
            },
            "required": [
                "title",
                "duration"
            ],
            "title": "Task"
        }
    }
}